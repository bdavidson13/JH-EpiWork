@model ContactPage

<div class="border">
    <img src="@Url.ContentUrl(Model.PageImage)" />
    <h2>@Model.PageName</h2>
    <p>@Model.TeaserText</p>
    <p>
        @Html.Translate("/contact/email"): @Html.DisplayFor(x => x.Email)<br />
        @Html.Translate("/contact/phone"): @Model.Phone<br />
        @Html.Translate("Home City"): @Model.HomeCity<br />
        @Html.Translate("Other Cities"): @Model.OtherCities<br />

    </p>
</div>
